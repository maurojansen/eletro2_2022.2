// soma numeros digitados enquanto a pessoa não digitar zero - com o comando faca...enquanto
programa {
  funcao inicio() {
    real n, soma
    soma = 0
    faca
    {     
      escreva("Digite um número (0=fim):")
      leia(n)
      soma = soma + n
    }
    enquanto(n!=0)
    escreva("A soma dos numeros é: ",soma)
  }
}
